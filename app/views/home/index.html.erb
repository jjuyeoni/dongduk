
<body id="page-top" class="index">

    <!-- Header -->
    <header>
        <div class="container">
            <div class="intro-text">
                <!--<div class="intro-lead-in">Welcome To Our Studio!</div>-->
                <div class="intro-heading">동덕인GO</div>
                <br>
                <% @students.each do |s| %>
                <h3>정족수 : <%= s.number %></h3>
                <% end %>
                <% if user_signed_in? %>
                    <% if current_user.email == 'admin@dongduk.ac.kr' %>
                    <form action="/home/stu" method="post">
                        <div class="row">
                            <input type="number" class="stu-form" name="number">
                            <button type="submit sbutton" class="btn btn-default">SUBMIT</button>
                        </div>
                    </form>
                    <% end %>
                <% end %>
                <h3>가입자 수 : <%=User.count%></h3>
            </div>
        </div>
    </header>

    <!-- chatting Section -->
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">COMMENT</h2>
                    <h3 class="section-subheading text-muted">여러분의 생각을 남겨주세요.</h3>
                </div>
            </div>
            <div class="row">
                <form action="/home/write" method="post">
                  <div class="form-group col-sm-11 col-xs-9">
                    <input type="text" class="form-control" id="exampleInputEmail1" name="content" placeholder="입력해주세요.">
                  </div>
                  <div class="col-sm-1 col-xs-3">
                      <button type="submit" class="btn btn-default">올리기</button>
                    </div>
                </form>
            </div>
            <div class="row">
                <div class="form-group col-sm-12 col-xs-12" >
                <% @comments.each do |c| %>
                <p><%= c.user.name %> >> <%= c.content %></p>
                <% end %>
                </div>
            </div>
        </div>
    </section>
